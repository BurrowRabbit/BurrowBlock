function trackEvent(action, category, label) {
    gtag('event', action, {
        'event_category': category,
        'event_label': label
    });
}

// Example: Track when the extension is installed
chrome.runtime.onInstalled.addListener(function() {
    trackEvent('install', 'extension', 'BurrowBlock Installed');
});

// Example: Track when a specific site is blocked
function onSiteBlocked(url) {
    trackEvent('block', 'site', url);
}
