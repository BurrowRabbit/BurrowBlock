{
  "manifest_version": 3,
  "name": "BurrowBlock",
  "version": "1.0",
  "description": "Block distracting websites and redirect to productive sites.",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "storage",
    "tabs",
    "webNavigation" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "images.png",
      "48": "images.png",
      "128": "images.png"
    },
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["README.html", "suggestion.html", "suggestion.js", "urls.html", "urls.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "author": {
    "name": "Khushboo Kohli",
    "email": "khushboo_kohli2025@isb.edu"
  }
}
